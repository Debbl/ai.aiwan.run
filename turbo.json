{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "inputs": ["src/**/*.ts"],
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "typecheck": {},
    "dev": {
      "persistent": true,
      "cache": false
    },
    "db:push": {
      "cache": false,
      "outputs": ["drizzle/**"]
    },
    "db:gen": {
      "cache": false,
      "outputs": ["drizzle/**"]
    },
    "db:migrate": {
      "cache": false,
      "outputs": ["drizzle/**"]
    }
  }
}
